<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/login.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,200;0,300;0,500;1,200;1,300;1,400&display=swap" rel="stylesheet" />
    <title>Login-Register</title>
  </head>
  <body>
    <div id="elipse"></div>
    <div id="elipse2"></div>
    <section id="login-register">
      <div class="depan">
      <h3 class="judul">Nukam.id</h3>
        <div class="form-box">
          <div class="button-box">
            <div id="btn">
            </div>
            <button type="button" class="toggle-btn" onclick="login()" id="tmbl1">Log In</button>
            <button type="button" class="toggle-btn" onclick="register()" id="tmbl2">Register</button>
          </div>
          <form id="login" class="input-login">
            <label for="Email">Email</Label>
            <input type="text" id="Email" class="input-field" required>
            <label for="Password">Password</Label>
            <input type="text" id="Password" class="input-field" required>
            <button type="submit" class="submit-btn">Log In</button>
          </form>
          <form id="register" class="input-login">
            <label for="Name">Your Name</Label>
            <input type="text" id="Name"class="input-field" required>
            <label for="Email">Email</Label>
            <input type="text" id="Email" class="input-field" required>
            <label for="Password">Password</Label>
            <input type="text" id="Password" class="input-field" required>
            <label for="Confirm-Password">Confirm Password</Label>
            <input type="text" id="Confirm-Password" class="input-field" required>
            <button type="submit" class="submit-btn">Register</button>
          </form>
      </div>
    </section>

    <script>
      var x = document.getElementById("login");
      var y = document.getElementById("register");
      var z = document.getElementById("btn");

      function register() {
        x.style.left = "-400px";
        y.style.left = "50px";
        y.style.top="120px";
        z.style.left = "100px";
      }

      function login() {
        x.style.left = "45px";
        y.style.left = "450px";
        z.style.left = "0px";
      }
    </script>

    @include('component/footer')
  </body>
</html>
